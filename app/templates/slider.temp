<div class="gr-slider" ng-class="content.class || ''">
    <h3 class="text-center" ng-if="content.title" translate="{{content.title}}"></h3>
    <ul class="clearfix text-center" >
        <li ng-repeat="item in content.items" ng-class="content.itemClass || ''">
            <img ng-src="{{item.image}}" class="gr-icon" />
            <p translate="{{item.text}}"></p>
        </li>
    </ul>
</div>